### APP ###
APP_PORT={{ remnawave_panel_app_port }}
METRICS_PORT={{ remnawave_panel_metrics_port }}

### API ###
# Possible values: max (all cores), number (N cores), -1 (all cores - 1)
API_INSTANCES={{ remnawave_panel_api_instances }}

### DATABASE ###
DATABASE_URL="postgresql://{{ remnawave_panel_pg_user }}:{{ remnawave_panel_pg_password }}@remnawave-db:5432/{{ remnawave_panel_pg_db }}"

### REDIS ###
REDIS_HOST=remnawave-redis
REDIS_PORT=6379

### JWT (generated if not provided) ###
JWT_AUTH_SECRET={{ remnawave_panel_jwt_auth_secret }}
JWT_API_TOKENS_SECRET={{ remnawave_panel_jwt_api_tokens_secret }}

### TELEGRAM NOTIFICATIONS ###
IS_TELEGRAM_NOTIFICATIONS_ENABLED={{ remnawave_panel_telegram_enabled | ternary('true','false') }}
TELEGRAM_BOT_TOKEN={{ remnawave_panel_telegram_bot_token }}
TELEGRAM_NOTIFY_USERS_CHAT_ID={{ remnawave_panel_telegram_users_chat_id }}
TELEGRAM_NOTIFY_NODES_CHAT_ID={{ remnawave_panel_telegram_nodes_chat_id }}
TELEGRAM_NOTIFY_CRM_CHAT_ID={{ remnawave_panel_telegram_crm_chat_id }}
TELEGRAM_NOTIFY_USERS_THREAD_ID={{ remnawave_panel_telegram_users_thread_id }}
TELEGRAM_NOTIFY_NODES_THREAD_ID={{ remnawave_panel_telegram_nodes_thread_id }}
TELEGRAM_NOTIFY_CRM_THREAD_ID={{ remnawave_panel_telegram_crm_thread_id }}

### FRONT_END (CORS) ###
FRONT_END_DOMAIN={{ remnawave_panel_frontend_domain }}

### SUBSCRIPTION PUBLIC DOMAIN (no scheme) ###
SUB_PUBLIC_DOMAIN={{ remnawave_panel_sub_public_domain }}

### SWAGGER/SCALAR ###
SWAGGER_PATH=/docs
SCALAR_PATH=/scalar
IS_DOCS_ENABLED=false

### PROMETHEUS METRICS ###
# Metrics are available at http://127.0.0.1:{{ remnawave_panel_metrics_port }}/metrics
METRICS_USER={{ remnawave_panel_metrics_user }}
METRICS_PASS={{ remnawave_panel_metrics_pass }}

### WEBHOOK (optional) ###
WEBHOOK_ENABLED={{ remnawave_panel_webhook_enabled | ternary('true','false') }}
WEBHOOK_URL={{ remnawave_panel_webhook_url }}
WEBHOOK_SECRET_HEADER={{ remnawave_panel_webhook_secret_header }}

### CLOUDFLARE (unused by app; kept for completeness) ###
CLOUDFLARE_TOKEN=

### Postgres container (not used by app itself) ###
POSTGRES_USER={{ remnawave_panel_pg_user }}
POSTGRES_PASSWORD={{ remnawave_panel_pg_password }}
POSTGRES_DB={{ remnawave_panel_pg_db }}

# --- Arbitrary overrides merged last ---
{% for k, v in remnawave_panel_env_overrides.items() %}
{{ k }}={{ v }}
{% endfor %}
